generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  id            String    @id @default(cuid())
  email         String    @unique
  name          String?
  role          String    @default("applicant") // applicant or recruiter
  googleId      String?   @unique
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  candidates    Candidate[]
}

model Job {
  id          String      @id @default(cuid())
  title       String
  jobType     String      @default("engineering") // engineering, other, internship
  description String      @db.Text
  details     String?     @db.Text
  skills      String[]
  salary      String?
  isActive    Boolean     @default(true)
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
  candidates  Candidate[]
}

model Candidate {
  id          String      @id @default(cuid())
  userId      String
  user        User        @relation(fields: [userId], references: [id], onDelete: Cascade)
  jobId       String
  job         Job         @relation(fields: [jobId], references: [id], onDelete: Cascade)
  name        String
  email       String
  whyFit      String      @db.Text
  portfolio   String?
  linkedin    String?
  github      String?
  contact     String
  resumeUrl   String
  resumeText  String?     @db.Text
  status      String      @default("applied") // applied, round_1, round_2, round_3, selected, rejected, withdrawn
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
  aiInsights  AIInsight[]
  rounds      CandidateRound[]
  
  @@unique([userId, jobId])
}

// Tracks notes, ratings, and interview details for each interview round
model CandidateRound {
  id            String    @id @default(cuid())
  candidateId   String
  candidate     Candidate @relation(fields: [candidateId], references: [id], onDelete: Cascade)
  round         String    // "round_1", "round_2", "round_3"
  notes         String?   @db.Text
  rating        Int?      // 1-5 star rating
  interviewer   String?   // Name of the interviewer
  interviewDate DateTime?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  
  @@unique([candidateId, round])
}

model AIInsight {
  id          String    @id @default(cuid())
  candidateId String
  candidate   Candidate @relation(fields: [candidateId], references: [id], onDelete: Cascade)
  jobJD       String    @db.Text
  resumeText  String    @db.Text
  score       Int
  insights    String[]
  createdAt   DateTime  @default(now())
}
